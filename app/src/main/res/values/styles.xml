<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@color/blue</item>
        <item name="android:textColorHint">@color/orange</item>
        <item name="colorControlNormal">@color/sky_blue</item>
        <item name="colorControlActivated">@color/sky_blue</item>
        <item name="colorControlHighlight">@color/sky_blue</item>
    </style>

    <style name="title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">60dp</item>
        <item name="android:layout_marginEnd">60dp</item>
        <item name="android:background">?android:selectableItemBackgroundBorderless</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="single_title_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:fontFamily">@font/helvetica_neue_bold</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
